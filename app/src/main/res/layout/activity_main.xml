<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.timer.MainActivity"
    android:background="#060606"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drag the bar to set your timer!"
        android:id="@+id/textView"
        android:textColor="#f7f7fa"
        android:textIsSelectable="false"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timerSeekBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:indeterminate="false"
        android:padding="5dp"
        android:layout_marginTop="100dp"
        android:background="#f9f8f8" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_below="@+id/timerSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/one" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:id="@+id/timerTextView"
        android:textSize="90sp"
        android:textColor="#faf5f4"
        android:layout_alignBottom="@+id/controllerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO!!!"
        android:id="@+id/controllerButton"
        android:onClick="control"
        android:textStyle="bold"
        android:background="#caf2f2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
